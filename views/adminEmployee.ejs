<!-- New User Form -->
  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" id="addemployeemodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          
            <!-- Form -->
            <div class="card-body p-2">
                <h2 class="text-uppercase text-center mb-5">CREATE NEW EMPLOYEE</h2>
  
                <form action="/employee/createEmployee" method="POST" id="add-user-form"  >

              
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example1cg">First Name</label>
                    <input type="text" id="form3Example1cg" class="form-control form-control-lg" name="firstname" id="firstname" />
                  </div>
  
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example3cg">Last Name</label>
                    <input type="text" id="form3Example3cg" class="form-control form-control-lg" name="lastname" id="lastname" />
                  </div>
  
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cg">Email</label>
                    <input type="text" id="form3Example4cg" class="form-control form-control-lg" name="email" id="email" />
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cg">Job_Description (Admin, Resceptionist, Room Service)</label>
                    <input type="text" id="form3Example4cg" class="form-control form-control-lg" name="jobDescription" id="jobDescription" />
                  </div> 

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cg">Address</label>
                    <input type="text" id="form3Example4cg" class="form-control form-control-lg" name="address" id="address" />
                  </div> 

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cg">Salary</label>
                    <input type="text" id="form3Example4cg" class="form-control form-control-lg" name="salary" id="salary" />
                  </div> 
                 
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Submit</button>
                  </div>
                </form>
  
              </div>
            <!-- Form End -->

        </div>
      </div>
    </div>
  </div>


<!-- Update User Form -->
   <div class="modal fade" id="updateform" id="updateuser" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

              <!-- Update Form -->
              <div class="card-body p-2">
                <h2 class="text-uppercase text-center mb-5">UPDATE EMPLOYEE</h2>
  
                <form id="updateEmployeeForm" enctype="multipart/form-data">

                  <!-- <input hidden type="text" id="updateUserId" class="form-control form-control-lg" name="userID" id="userId" /> -->

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example1cg">First Name</label>
                    <input type="hidden" name="id"  id= "updateID" />
                    <input type="text" id="updateEmployeeFirstname" class="form-control form-control-lg" name="firstname" id="firstname" />
                  </div>
  
  
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example3cg">Last Name</label>
                    <input type="text" id="updateEmployeeLastname" class="form-control form-control-lg" name="lastname" id="lastname" />
                  </div>
  
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cg">Email</label>
                    <input type="text" id="updateEmail" class="form-control form-control-lg" name="email" id="email" />
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cg">Job_Description (Admin, Resceptionist, Room Service)</label>
                    <input type="text" id="updateEmployeeJobDes" class="form-control form-control-lg" name="jobDescription" id="jobDescription" />
                  </div> 

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cg">Address</label>
                    <input type="text" id="updateEmployeeAddress"  class="form-control form-control-lg" name="address" id="address" />
                  </div> 

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cg">Salary</label>
                    <input type="text" id="updateEmployeeSalary"  class="form-control form-control-lg" name="salary" id="salary" />
                  </div> 

                  <div class="modal-footer">
                    <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Submit</button>
                  </div>
                </form>
            </div>
            <!-- Form End  -->
        </div>
      </div>
    </div>
  </div> 

</div>
